### Settings from original zathurarc ###
set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map p print
map g goto top

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#d5d5ce'
set completion-bg '#17201f'

# Command line completion group elements
set completion-group-fg '#B69A65'
set completion-group-bg '#17201f'

# Current command line completion element
set completion-highlight-fg '#17201f'
set completion-highlight-bg '#d5d5ce'

# Default foreground/background color
set default-bg rgba(23,32,31,0.8)

# Input bar
set inputbar-fg '#d5d5ce'
set inputbar-bg '#17201f'

# Notification
set notification-fg '#d5d5ce'
set notification-bg '#17201f'

# Error notification
set notification-error-fg '#d5d5ce'
set notification-error-bg '#988C6F'

# Warning notification
set notification-warning-fg '#d5d5ce'
set notification-warning-bg '#988C6F'

