# Highlighting parts of the document (e.g. show search results)
set highlight-color '#B69A65'
set highlight-active-color '#B69A65'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#d5d5ce'

# 'Loading...' text
set render-loading-fg '#d5d5ce'
set render-loading-bg '#17201f'

# Index mode
set index-fg '#d5d5ce'
set index-bg '#17201f'

# Selected element in index mode
set index-active-fg '#17201f'
set index-active-bg '#d5d5ce'

